# Set default values for all following accounts.
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
#logfile ~/.msmtp.log

# ****************************
# * idone.leonardo@gmail.com *
# ****************************
account idone-dot-leonardo
host smtp.gmail.com
port 587
from idone.leonardo@gmail.com
user idone.leonardo
passwordeval gpg2 --quiet --for-your-eyes-only --no-tty --decrypt ~/Sync/secrets/mail-secrets/.idone-dot-leonardo.gpg

